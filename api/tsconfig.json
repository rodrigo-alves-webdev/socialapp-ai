{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "lib", 
    "removeComments": true, 
    "target": "ES6", 
    "types": ["node", "express"],

    "baseUrl": "./", 
    "esModuleInterop": true, 
    "moduleResolution": "node", 
    "paths": {
      "*": ["node_modules/*", "src/*"]
    }, 

    "sourceMap": true,
    "sourceRoot": "/", 

    "alwaysStrict": true, 
    "allowUnreachableCode": false,
    "noImplicitAny": true, 
    "strictNullChecks": true, 
    "strict": true,

    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true, 
    "noUnusedParameters": true 
  },
  "include": ["./**/*.ts", "test/**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}